//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm3 *Form3;
int cont=0;
int i=1;
//---------------------------------------------------------------------------
__fastcall TForm3::TForm3(TComponent* Owner)
	: TForm(Owner)
{
}
//---------------------------------------------------------------------------

void __fastcall TForm3::Timer1Timer(TObject *Sender)
{
	 cont++;
	 if(cont==1)
	 {
		 Lbl_ganaste->Font->Color=clRed;

	 }
	 if(cont==2)
	 {
		 Lbl_ganaste->Font->Color=clBlue;

	 }if(cont==3)
	 {
		 Lbl_ganaste->Font->Color=clRed;

	 }if(cont==4)
	 {
		 Lbl_ganaste->Font->Color=clBlue;

	 }if(cont==5)
	 {
		 Lbl_ganaste->Font->Color=clRed;

	 }if(cont==6)
	 {
		 Lbl_ganaste->Font->Color=clBlue;

	 }
	 if(cont==7)
	 {
		 Lbl_ganaste->Font->Color=clRed;

	 }if(cont==8)
	 {
		 Lbl_ganaste->Font->Color=clBlue;

	 }
	 if(cont==9)
	 {
	   Close();
	 }
}
