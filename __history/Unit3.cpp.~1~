int i=9;
void __fastcall TForm3::Timer1Timer(TObject *Sender)
{
	 segundos--;
	 if(segundos==i)
	 {
		 Lbl_ganaste->Font->Color=clRed;
		 i--;
	 }
	 if(segundos==i)
	 {
		 Lbl_ganaste->Font->Color=clBlue;
		 i--;
	 }if(segundos==i)
	 {
		 Lbl_ganaste->Font->Color=clRed;
		 i--;
	 }if(segundos==i)
	 {
		 Lbl_ganaste->Font->Color=clBlue;
		 i--;
	 }if(segundos==i)
	 {
		 Lbl_ganaste->Font->Color=clRed;
		 i--;
	 }if(segundos==i)
	 {
		 Lbl_ganaste->Font->Color=clBlue;
		 i--;
	 }
	 if(segundos==i)
	 {
		 Lbl_ganaste->Font->Color=clRed;
		 i--;
	 }if(segundos==i)
	 {
		 Lbl_ganaste->Font->Color=clBlue;
		 i--;
	 }
	 if(segundos==0)
	 {
	   Close();
	 }
}
